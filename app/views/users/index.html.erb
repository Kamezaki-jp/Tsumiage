<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto pt-3">
      <h3>ユーザー一覧</h3><hr>
      <% @users.each do |user| %>
        <div class="row mt-3">
          <div class="col shadow p-3 d-flex">
            <div class="col">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "60x60", class: "rounded-circle shadow-sm" %>
              <% end %>
            </div>
            <div class="col text-left pt-3">
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
            </div>
            <div class="col text-center pt-3">
              <% unless user == current_user %>
                <% if current_user.following?(user) %>
                  <%= link_to 'フォローを外す', unfollow_path(user.id), method: :POST %>
                <% else %>
                  <%= link_to 'フォローする', follow_path(user.id), method: :POST %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
