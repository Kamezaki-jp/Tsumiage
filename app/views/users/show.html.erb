<div class="container">
  <%= render 'shared/flash_messages' %>
  <div class="row mt-3 p-3 user-content">
    <div class="col-md-2">
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '120x120', class: "rounded-circle shadow ml-3" %>
    </div>
    <div class="col">
      <p class="user-name"><%= @user.name %></p>
      <p class="user-introduction"><%= @user.introduction %></p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= link_to '積み上げグラフ', '#', class: "btn btn-info" %>
    </div>
    <div class="col mt-3">
      <% if @user.id == current_user.id %>
        <%= link_to 'アカウント編集', edit_user_registration_path, class: "btn btn-outline-info btn-block btn-radius" %>
      <% elsif current_user.following?(@user) %>
        <%= link_to 'フォローを外す', unfollow_path(@user.id), class: "btn btn-remove", method: :POST %>
      <% else %>
        <%= link_to 'フォローする', follow_path(@user.id), class: "btn btn-main", method: :POST %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to("#{@user.follower.count}フォロー", follows_path(@user), class: "text-main font-weight-bold link-under-none") %>
      <%= link_to("#{@user.followed.count}フォロワー", followers_path(@user), class: "text-main font-weight-bold link-under-none") %>
    </div>
  </div>
</div>

